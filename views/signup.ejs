        var email = $(`#email`).val();  
        var password = $(`#password`).val();  

        if(name != '' && email != '' && password != '') {  

        $('#workProgress').text(" Signing Up .... ðŸš€");  

        document.getElementById('button').disabled = true;
        $('#button').text(" SIGNING UP ....");  

          $.ajax({  
              url:"/account",  
              method:"POST",  
              data:{name:name, email:email, password:password},  
              dataType: "json",
              success:function(data)  
              {  
              if(data.created==1){
                  $('#workProgress').text(" Account Created Successfully! âœ”");
                  $('#ProgressExtras').text("Please visit your email and verify your account.");
                  
